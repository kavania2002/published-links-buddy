{
  "manifest_version": 3,
  "name": "Published Links Buddy",
  "description": "Automatically detect, save, and organize shared links from platforms like GPT, Claude, and Boltâ€”never lose them again!",
  "version": "1.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "96": "icons/icon96.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Click to open Side Panel"
  },
  "background": {
    "service_worker": "background/service-worker.bundle.js"
  },
  "content_scripts": [
    {
      "matches": ["https://claude.ai/*"],
      "js": ["scripts/claude.bundle.js"]
    },
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["scripts/chatgpt.bundle.js"]
    }
  ],
  "side_panel": {
    "default_path": "index.html"
  },
  "permissions": ["sidePanel"]
}
